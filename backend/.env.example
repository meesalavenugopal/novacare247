# NovaCare Backend Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/novacare

# Security
SECRET_KEY=your-super-secret-key-change-in-production

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=NovaCare 24/7

# AWS S3 Configuration (for image uploads)
# 1. Create an S3 bucket in AWS Console
# 2. Create an IAM user with S3 access and get credentials
# 3. Configure bucket CORS for browser uploads (see below)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=novacare-uploads
S3_PRESIGNED_URL_EXPIRY=3600

# Optional: CloudFront CDN for faster image delivery
CLOUDFRONT_DOMAIN=

